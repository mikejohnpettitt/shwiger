<h1>Your <%= @user_deck.deck.name %> deck</h1>

<% @to_revise = Card.where(deck: @deck).where(id: UserCard.where(user: current_user).where("next_review IS NULL OR next_review <= ?", Time.current).select(:card_id)).count %>

<h3>Your progress</h3>
<h4><%= Card.where(deck: @deck).where(id: UserCard.where(user: current_user).select(:card_id)).count %>/<%= Card.where(deck: @deck).length %> cards learned</h4>
<h4>Due to revise: <%= @to_revise %></h4>
<h3>Let's study!</h3>

<%= simple_form_for StudySession.new do |f| %>
<%= f.hidden_field :mode, value: "learn" %>
<%= f.hidden_field :deck_id, value: @user_deck.deck.id %>
  <%= f.button :submit, "Learn new cards" %>
<% end %>

<%= simple_form_for StudySession.new do |f| %>
<%= f.hidden_field :mode, value: "revise" %>
<%= f.hidden_field :deck_id, value: @user_deck.deck.id %>
    <% if @to_revise == 0 %>
    <%= f.button :submit, "Revise cards", disabled: true %>
    <% else %>
    <%= f.button :submit, "Revise cards" %>
    <% end %>
<% end %>
